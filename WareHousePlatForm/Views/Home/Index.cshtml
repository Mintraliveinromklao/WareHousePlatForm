@{
    ViewData["Title"] = "Home Page";
    var data = (List<WareHousePlatForm.Models.selectProductBoundPage>)ViewData["product"];
    int i = 0;
}

<div class="m-0">
    <div class="bg-black" style="width:100%; height:300px;">
        <img src="https://www.kroobannok.com/UserFiles2611/Image/01-2022/09/pallet-warehouse-2.jpg" class="img-fluid " style="opacity:0.5 ;height:300px; width:100%;">
    </div>
    <div class="container">

        <div class="row">
            @foreach (var item in data)
            {
                <div class="col-3 text-center">
                    <form asp-controller="Home" asp-action="Borrow" method="post" id="my_form_@i">
                        <div class=" m-4 border border-secondary">
                            <a style="width:300px; height:250px;" class="text-decoration-none" href="javascript:{}" onclick="document.getElementById('my_form_@i').submit();">
                                <img src="https://www.shutterstock.com/image-vector/tools-icon-260nw-219305230.jpg" class="img-fluid">
                                <p class="text-black">@item.Name</p>
                                <input type="text" name="name" value="@item.Name" hidden>
                                <p class="text-black">@item.Code</p>
                                <input type="text" name="code" value="@item.Code" hidden>
                                <input type="text" name="unit" value="@item.UnitOfUsable" hidden>
                            </a>
                        </div>
                    </form>
                </div>

                i++;
            }
        </div>

    </div>
</div>
